<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/skin_white_color"
    android:minWidth="@dimen/dialog_mini_width"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title"
        android:background="@color/skin_background_color"
        android:gravity="center|left"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/skin_text_black_color"
        android:textSize="@dimen/text_larger" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/skin_line_color" />

    <com.lyy.ui.widget.NoScrollListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@color/transparent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/skin_line_color" />

    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/skin_white_color"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/skin_text_black_color"
            android:textSize="@dimen/text_larger" />

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/skin_line_color" />

        <Button
            android:id="@+id/enter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="礼包管理"
            android:textColor="@color/skin_text_black_color"
            android:textSize="@dimen/text_larger" />

    </LinearLayout>
</LinearLayout>
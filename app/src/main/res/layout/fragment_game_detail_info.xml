<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:paddingBottom="@dimen/tab_bar_height"
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/skin_white_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_v_8">

            <TextView
                android:id="@+id/review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_v_8"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="@dimen/margin_v_16"
                android:paddingRight="@dimen/margin_v_16"
                android:textColor="@color/skin_text_black_color"
                android:textSize="@dimen/text_medium" />

            <com.lyy.ui.widget.NoScrollGridView
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_v_16"
                android:listSelector="@color/transparent"
                android:numColumns="2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_v_16"
                android:paddingLeft="@dimen/margin_v_16"
                android:paddingRight="@dimen/margin_h_16"
                android:text="游戏简介"
                android:textColor="@color/skin_text_black_color"
                android:textSize="@dimen/text_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_v_8"
                android:background="@color/skin_line_color" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_h_16"
                android:paddingLeft="@dimen/margin_v_16"
                android:paddingRight="@dimen/margin_h_16">

                <TextView
                    android:id="@+id/detail_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="4"
                    android:textColor="@color/skin_text_black_color"
                    android:textSize="@dimen/text_medium"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/detail_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/skin_text_black_color"
                    android:textSize="@dimen/text_medium"
                    android:visibility="gone" />
            </FrameLayout>

            <ImageView
                android:id="@+id/more"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/margin_h_8"
                android:src="@mipmap/icon_screen_down" />

        </LinearLayout>

    </ScrollView>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/skin_selector_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:padding="@dimen/margin_h_16">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/bt"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="新闻标题"
        android:textColor="@color/skin_black_color"
        android:textSize="@dimen/text_larger" />

    <ProgressBar
        android:id="@+id/pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="8dp"
        android:layout_below="@+id/title"
        android:layout_marginRight="@dimen/margin_v_8"
        android:layout_marginTop="12dp"
        android:progressDrawable="@drawable/bg_gift_bar" />

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/margin_v_8"
        android:layout_toRightOf="@+id/pb"
        android:text="剩余90%"
        android:textColor="@color/skin_text_gray_color"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num"
        android:layout_marginTop="@dimen/margin_v_8"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="礼包内容"
        android:textColor="@color/skin_text_gray_color"
        android:textSize="@dimen/text_medium" />

    <Button
        android:id="@+id/bt"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_apk_orange_bt"
        android:text="抢号"
        android:textColor="@color/white"
        android:textSize="@dimen/text_larger" />


</RelativeLayout>
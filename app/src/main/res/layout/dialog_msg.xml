<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="title"
            type="java.lang.String" />

        <variable
            name="msg"
            type="java.lang.String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/skin_white_color"
        android:minWidth="@dimen/dialog_mini_width"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title"
            android:background="@color/skin_background_color"
            android:gravity="center|left"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@{title}"
            android:textColor="@color/skin_text_black_color"
            android:textSize="@dimen/text_larger" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/skin_line_color" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical|left"
            android:lineSpacingMultiplier="1.2"
            android:text="@{msg}"
            android:textColor="#000"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/skin_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/skin_white_color"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="@string/setting_dialog_location_cancel"
                android:textColor="@color/skin_text_black_color"
                android:textSize="@dimen/text_larger" />

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@color/skin_line_color" />

            <Button
                android:id="@+id/enter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="@string/setting_dialog_location_enter"
                android:textColor="@color/skin_text_black_color"
                android:textSize="@dimen/text_larger" />

        </LinearLayout>
    </LinearLayout>
</layout>
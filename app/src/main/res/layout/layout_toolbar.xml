<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tool_bar_height"
    android:background="@color/skin_primary_color">

    <TextView
        android:background="@drawable/skin_selector_bar_widget"
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="-5dp"
        android:paddingRight="@dimen/margin_v_8"
        android:text="test"
        android:textColor="@color/white"
        android:textSize="@dimen/text_larger" />

    <ImageView
        android:id="@+id/right_icon"
        style="@style/BarImgStyle"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside" />

    <TextView
        android:visibility="gone"
        android:background="@drawable/skin_selector_bar_widget"
        android:id="@+id/right_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_h_8"
        android:paddingRight="@dimen/margin_h_8"
        android:text="test"
        android:textColor="@color/white"
        android:textSize="@dimen/text_larger" />

</RelativeLayout>

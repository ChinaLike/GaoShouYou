<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/skin_white_color"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="@dimen/margin_h_16">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="标题"
        android:textColor="@drawable/selector_blue_gray_text_bg"
        android:textSize="@dimen/text_larger" />

    <com.touchrom.gaoshouyou.widget.MyCommentText
        android:id="@+id/reply_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginTop="@dimen/margin_h_8"
        android:drawablePadding="5dp"
        android:text="回复内容"
        android:textColor="@color/skin_black_color"
        android:textSize="@dimen/text_larger" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reply_content"
        android:layout_marginTop="@dimen/margin_v_4"
        android:text="2015"
        android:textColor="@color/skin_text_gray_color"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/reply_content"
        android:layout_marginTop="@dimen/margin_v_4"
        android:text="点赞"
        android:textColor="@color/skin_text_gray_color"
        android:textSize="@dimen/text_medium" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/margin_v_8"
        android:background="@color/skin_line_color" />

</RelativeLayout>